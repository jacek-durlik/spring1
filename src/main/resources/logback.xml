<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%yellow(%d{dd-MM-yyyy HH:mm:ss.SSS}) %cyan([%thread]) %blue(%-5level) %green([%logger{36}]) - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>